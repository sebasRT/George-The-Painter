---
import Image from "astro/components/Image.astro";
import LinkButton from "../ui/linkButton.astro";

interface Props {
    img: ImageMetadata;
    alt: string;
    headline: string;
    subheadline: string;
}
const { img, alt, headline, subheadline } = Astro.props;
---

<section class="w-full relative h-[80vh] text-white p-3 sm:p-5 md:p-10">
    <div class="size-full flex flex-col justify-around max-w-3xl">
        <h1 class="text-4xl sm:text-5xl md:text-5xl font-bold">{headline}</h1>
        <div
            class="mt-10 flex-grow flex flex-col justify-between items-center max-w-xl"
        >
            <span class="text-2xl md:text-3xl italic">{subheadline}</span>
           
            <LinkButton
                title="Get Free Estimate"
                url="/contact-form"
                classes="text-lg  font-bold bg-emerald-600 py-2 px-5 rounded-full hover:scale-105 transition self-center tracking-wide"
            />
        </div>
    </div>
    <figure class="-z-10 absolute inset-0 h-[80vh] object-cover" id="heroImage">
        <Image src={img} alt={alt} class="w-full h-full object-cover" />
    </figure>
</section>
<style>
    #heroImage::after {
        content: "";
        display: block;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        position: absolute;
        top: 0;
        left: 0;
    }
</style>
