---
import LinkButton from "../ui/linkButton.astro";
import waves from "../../assets/backgrounds/waves.svg";
import { Image } from "astro:assets";

import exteriorPainting from "../../assets/images/exteriorPaintingCard.jpeg";
import interiorPainting from "../../assets/images/interiorPaintingCard.jpeg";
import drywallRepair from "../../assets/images/drywallRepairCard.jpeg";
import powerWashing from "../../assets/images/powerWashingCard.jpeg";
import { Icon } from "astro-icon/components";

---

<section class="flex flex-col gap-10 bg-emerald-500 *:w-full *:bg-gray-50">
    <div class="relative border-4 border-gray-800 rounded-sm">
        <Image
            alt="Exterior painting services by George the Painter"
            src={exteriorPainting}
            class="object-cover h-96 w-full"
        />
        <div
            class="flex flex-col gap-5 absolute bottom-0 bg-gray-700 text-gray-50 px-10 pt-2 text-center"
        >
            <span class="text-lg">
                We bring vibrancy and protection to your home's exterior with
                <b>quality paints</b> and skilled craftsmanship.
            </span>
            <a href="/exterior-painting" class="text-lg bg-gray-800 group"
                ><i
                    class="text-3xl font-antonio group-hover:underline decoration-emerald-500"
                    >Exterior Painting
                    <Icon
                        name="longArrow"
                        class="inline rotate-90 group-hover:translate-x-5 group-hover:stroke-emerald-500 transition"
                    />
                </i>
            </a>
        </div>
    </div>
    <div class="relative border-4 border-gray-800 rounded-sm">
        <Image
            alt="Exterior painting services by George the Painter"
            src={interiorPainting}
            class="object-cover h-96 w-full"
        />
        <div
            class="flex flex-col gap-5 absolute bottom-0 bg-gray-700 text-gray-50 px-10 pt-2 text-center"
        >
            <span class="text-lg">
                We enhance the beauty and comfort of your home's interior with
                <b>premium paints</b> and expert techniques.
            </span>
            <a href="/exterior-painting" class="text-lg bg-gray-800 group"
                ><i
                    class="text-3xl font-antonio group-hover:underline decoration-emerald-500"
                    >Interior Painting
                    <Icon
                        name="longArrow"
                        class="inline rotate-90 group-hover:translate-x-5 group-hover:stroke-emerald-500 transition"
                    />
                </i>
            </a>
        </div>
    </div>
    
    <div class="relative border-4 border-gray-800 rounded-sm">
        <Image
            alt="Drywall repair services by George the Painter"
            src={drywallRepair}
            class="object-cover h-96 w-full"
        />
        <div
            class="flex flex-col gap-5 absolute bottom-0 bg-gray-700 text-gray-50 px-10 pt-2 text-center"
        >
            <span class="text-lg">
                We provide professional drywall repair services to fix any
                cracks, holes, or damage in your walls or ceilings.
            </span>
            <a href="/drywall-repair" class="text-lg bg-gray-800 group"
                ><i
                    class="text-3xl font-antonio group-hover:underline decoration-emerald-500"
                    >Drywall Repair
                    <Icon
                        name="longArrow"
                        class="inline rotate-90 group-hover:translate-x-5 group-hover:stroke-emerald-500 transition"
                    />
                </i>
            </a>
        </div>
    </div>
    <div class="relative border-4 border-gray-800 rounded-sm">
        <Image
            alt="Power washing services by George the Painter"
            src={powerWashing}
            class="object-cover h-96 w-full"
        />
        <div
            class="flex flex-col gap-5 absolute bottom-0 bg-gray-700 text-gray-50 px-10 pt-2 text-center"
        >
            <span class="text-lg">
                We offer professional power washing services to clean and
                restore the exterior surfaces of your home or business.
            </span>
            <a href="/power-washing" class="text-lg bg-gray-800 group"
                ><i
                    class="text-3xl font-antonio group-hover:underline decoration-emerald-500"
                    >Power Washing
                    <Icon
                        name="longArrow"
                        class="inline rotate-90 group-hover:translate-x-5 group-hover:stroke-emerald-500 transition"
                    />
                </i>
            </a>
        </div>
    </div>
</section>
